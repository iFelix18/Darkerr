# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{scss,css}]
indent_style = space
indent_size = 2

[*.{yml,json,js}]
indent_style = space
indent_size = 2
